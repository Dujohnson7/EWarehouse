                      <ul class="pagination mb-0" id="pagination">
                        <!-- Pagination -->
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>
            </div>

@section Scripts {
<script src="~/js/table-pagination.js"></script>
   
  <script>
    $(document).ready(function() { 
      var pagination = initTablePagination();
      
      // Import-specific delete handler
      $('.delete').on('click', function(e) {
        e.preventDefault();
        var importId = $(this).data('import-id');
        var importName = $(this).data('import-name');
        var $row = $(this).closest('tr');
         
        if (confirm('Are you sure you want to delete import ' + importName + ' (' + importId + ')?')) {
          $row.fadeOut(300, function() {
            $(this).remove();
            pagination.refresh();  
          });
        }
      });
    });
  </script>
}

