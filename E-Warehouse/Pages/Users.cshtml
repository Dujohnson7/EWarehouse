                      <span class="text-muted">Showing <span id="showingFrom">1</span> to <span id="showingTo">10</span> of <span id="totalItems">0</span> entries</span>
                    </div>
                    <nav>
                      <ul class="pagination mb-0" id="pagination">
                        <!-- Pagination -->
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>
            </div>

@section Scripts {
<script src="~/js/table-pagination.js"></script>
   
  <script>
    $(document).ready(function() { 
      var pagination = initTablePagination();
      
      // User-specific delete handler
      $('.delete').on('click', function(e) {
        e.preventDefault();
        var userId = $(this).data('user-id');
        var userName = $(this).data('user-name');
        var $row = $(this).closest('tr');
         
        if (confirm('Are you sure you want to delete ' + userName + ' (' + userId + ')?')) {
          $row.fadeOut(300, function() {
            $(this).remove();
            pagination.refresh();  
          });
        }
      });
    });
  </script>
}

