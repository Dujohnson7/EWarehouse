@page
@model E_Warehouse.Pages.EditItemModel
@{
} 
<div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Edit Item</h5>
              <div class="card">
                <div class="card-body">
                  <form>
                    <div class="mb-3">
                      <label for="itemName" class="form-label">Item Name</label>
                      <input type="text" class="form-control" id="itemName" placeholder="Enter item name" value="Item 1">
                    </div>
                    <div class="mb-3">
                      <label for="itemCategory" class="form-label">Category</label>
                      <select class="form-select" id="itemCategory">
                        <option>Select Category</option>
                        <option selected>Electronics</option>
                        <option>Furniture</option>
                        <option>Tools</option>
                        <option>Other</option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="itemQuantity" class="form-label">Quantity</label>
                      <input type="number" class="form-control" id="itemQuantity" placeholder="Enter quantity" value="50">
                    </div>
                    <div class="mb-3">
                      <label for="itemDescription" class="form-label">Description</label>
                      <textarea class="form-control" id="itemDescription" rows="3" placeholder="Enter description">Sample item description</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="@Url.Page("/Items")" class="btn btn-secondary">Back</a>
                  </form>
                </div>
              </div> 
            </div>

