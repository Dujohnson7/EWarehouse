                                <i class="ti ti-edit fs-5"></i>
                              </a>
                              <a href="javascript:void(0)" class="text-dark delete ms-2" data-category-id="C003" data-category-name="Tools">
                                <i class="ti ti-trash fs-5"></i>
                              </a>
                            </div>
                          </td>
                        </tr> 
                      </tbody>
                    </table>
                  </div>
                  
                  <!-- Pagination -->
                  <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-2">
                      <span class="text-muted">Show:</span>
                      <select class="form-select form-select-sm" id="itemsPerPage" style="width: auto;">
                        <option value="5">5</option>
                        <option value="10" selected>10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                      </select>
                      <span class="text-muted">entries</span>
                    </div>
                    <div>
                      <span class="text-muted">Showing <span id="showingFrom">1</span> to <span id="showingTo">10</span> of <span id="totalItems">0</span> entries</span>
                    </div>
                    <nav>
                      <ul class="pagination mb-0" id="pagination">
                        <!-- Pagination -->
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>
            </div>

@section Scripts {
<script src="~/js/table-pagination.js"></script>
   
  <script>
    $(document).ready(function() { 
      var pagination = initTablePagination();
      
      // Category-specific delete handler
      $('.delete').on('click', function(e) {
        e.preventDefault();
        var categoryId = $(this).data('category-id');
        var categoryName = $(this).data('category-name');
        var $row = $(this).closest('tr');
         
        if (confirm('Are you sure you want to delete ' + categoryName + ' (' + categoryId + ')?')) {
          $row.fadeOut(300, function() {
            $(this).remove();
            pagination.refresh();  
          });
        }
      });
    });
  </script>
}

