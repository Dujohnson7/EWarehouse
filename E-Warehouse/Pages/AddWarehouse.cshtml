@page
@model E_Warehouse.Pages.AddWarehouseModel
@{
} 
<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Add Warehouse</h5>
        <div class="card">
            <div class="card-body">
                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">Warehouse Name</label>
                        <input type="text" class="form-control" placeholder="Enter warehouse name" name="Name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Province</label>
                        <select class="form-select" id="province" name="Province" required>
                            <option value="">Select Province</option>
                            <option value="KIGALI">Kigali City</option>
                            <option value="EAST">East</option>
                            <option value="WEST">West</option>
                            <option value="SOUTH">South</option>
                            <option value="NORTH">North</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">District</label>
                        <select class="form-select" id="district" name="District" required>
                            <option value="">Select District</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" placeholder="Enter Address" name="Address" required>
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Manager</label>
                        <select class="form-select" asp-for="warehouse.ManagerID">
                            <option value="">Select Manager</option>
                            @foreach (var manager in Model.Managers)
                            {
                                <option value="@manager.UserID">@manager.FullName</option>
                            }
                        </select>
                    </div>


                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="@Url.Page("/Warehouse")" class="btn btn-secondary">Back</a>

                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const districtData = {
        "KIGALI": ["Gasabo", "Nyarugenge", "Kicukiro"],

        "NORTH": ["Burera", "Gakenke", "Gicumbi", "Musanze", "Rulindo"],

        "SOUTH": [
            "Gisagara", "Huye", "Kamonyi", "Muhanga",
            "Nyamagabe", "Nyanza", "Nyaruguru", "Ruhango"
        ],

        "WEST": [
            "Karongi", "Ngororero", "Nyabihu", "Nyamasheke",
            "Rubavu", "Rusizi", "Rutsiro"
        ],

        "EAST": [
            "Bugesera", "Gatsibo", "Kayonza", "Kirehe",
            "Ngoma", "Nyagatare", "Rwamagana"
        ]
    };

    document.getElementById("province").addEventListener("change", function () {
        const province = this.value;
        const districtSelect = document.getElementById("district");

        districtSelect.innerHTML = '<option value="">Select District</option>';

        if (districtData[province]) {
            districtData[province].forEach(function (d) {
                let opt = document.createElement("option");
                opt.value = d.toUpperCase();
                opt.textContent = d;
                districtSelect.appendChild(opt);
            });
        }
    });
</script>
