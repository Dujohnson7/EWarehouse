@page
@model E_Warehouse.Pages.WarehouseModel
@{
}
 

<div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Warehouse Management</h5>
               
              <div class="widget-content searchable-container list">
                <div class="card card-body">
                  <div class="row">
                    <div class="col-md-4 col-xl-3">
                      <form class="position-relative">
                        <input type="text" class="form-control product-search ps-5" id="input-search" placeholder="Search Warehouses..." />
                        <i class="ti ti-search position-absolute top-50 start-0 translate-middle-y fs-6 text-dark ms-3"></i>
                      </form>
                    </div>
                    <div class="col-md-8 col-xl-9 text-end d-flex justify-content-md-end justify-content-center mt-3 mt-md-0">
                      <a href="@Url.Page("/AddWarehouse")"  class="btn btn-primary d-flex align-items-center">
                        <i class="ti ti-plus text-white me-1 fs-5"></i> Add Warehouse
                      </a>
                    </div>
                  </div>
                </div>
                
                <div class="card card-body">
                  <div class="table-responsive">
                    <table class="table search-table align-middle text-nowrap">
                      <thead class="header-item">
                        <th>#</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Zones Count</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Action</th>
                        </thead>
                        <tbody>
                            @foreach (var warehouse in Model.warehouseLists)
                            {
                                <tr class="search-items">
                                    <td><span class="usr-warehouse-id">@($"W{warehouse.WarehouseID:000}")</span></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="ms-2">
                                                <div class="user-meta-info">
                                                    <h6 class="user-name mb-0" data-name="@warehouse.Name">@warehouse.Name</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="usr-warehouse-location">@($"{warehouse.Province}, {warehouse.District}, {warehouse.Address}")</span></td>
                                    <td><span class="usr-zones-count">0</span></td>  
                                    <td>
                                        <span class="badge @(warehouse.IsActive ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning")">
                                            @(warehouse.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td><span class="usr-created-date">@warehouse.CreatedAt.ToString("yyyy-MM-dd")</span></td>
                                    <td>
                                        <div class="action-btn">
                                            <a href="@Url.Page("/EditWarehouse", new { id = warehouse.WarehouseID })" class="text-primary edit">
                                                <i class="ti ti-edit fs-5"></i>
                                            </a> 
                                            <form method="post" asp-page-handler="Delete" style="display:inline;">
                                                <input type="hidden" name="id" value="@warehouse.WarehouseID" />
                                                <button type="submit" class="btn btn-link text-dark delete ms-2" onclick="return confirm('Are you sure you want to delete @warehouse.Name?');">
                                                    <i class="ti ti-trash fs-5"></i>
                                                </button>
                                            </form>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                  </div>
                  
                  <!-- Pagination -->
                  <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-2">
                      <span class="text-muted">Show:</span>
                      <select class="form-select form-select-sm" id="itemsPerPage" style="width: auto;">
                        <option value="5">5</option>
                        <option value="10" selected>10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                      </select>
                      <span class="text-muted">entries</span>
                    </div>
                    <div>
                      <span class="text-muted">Showing <span id="showingFrom">1</span> to <span id="showingTo">10</span> of <span id="totalItems">0</span> entries</span>
                    </div>
                    <nav>
                      <ul class="pagination mb-0" id="pagination">
                        <!-- Pagination -->
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>
            </div>

@section Scripts {
<script src="~/js/table-pagination.js"></script>
   
  <script>
    $(document).ready(function() { 
      var pagination = initTablePagination();
       
    });
  </script>
}

