@page "{id:int}"
@model E_Warehouse.Pages.EditWarehouseModel
@{
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Edit Warehouse</h5>
        <form method="post">
            <input type="hidden" asp-for="warehouse.WarehouseID" />

            <div class="mb-3">
                <label class="form-label">Warehouse Name</label>
                <input type="text" class="form-control" asp-for="warehouse.Name" required />
            </div>
            
            <div class="mb-3">
                <label class="form-label">Province</label>
                <select class="form-select" id="province" asp-for="warehouse.Province" required>
                    <option value="">Select Province</option>
                    <option value="KIGALI">Kigali City</option>
                    <option value="EAST">East</option>
                    <option value="WEST">West</option>
                    <option value="SOUTH">South</option>
                    <option value="NORTH">North</option>
                </select>

            </div>


            <div class="mb-3">
                <label class="form-label">District</label>
                <select class="form-select" id="district" asp-for="warehouse.District" required>
                    <option value="">Select District</option>
                </select>

            </div>

            <div class="mb-3">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" asp-for="warehouse.Address" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Manager</label>
                <select class="form-select" asp-for="warehouse.ManagerID">
                    <option value="">Select Manager</option>
                    @foreach (var manager in Model.Managers)
                    {
                        <option value="@manager.UserID">@manager.FullName</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Active</label>
                <input type="checkbox" asp-for="warehouse.IsActive" />
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a href="@Url.Page("/Warehouse")" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>


<script>
    const districtData = {
        "KIGALI": ["Gasabo", "Nyarugenge", "Kicukiro"],
        "NORTH": ["Burera", "Gakenke", "Gicumbi", "Musanze", "Rulindo"],
        "SOUTH": ["Gisagara", "Huye", "Kamonyi", "Muhanga", "Nyamagabe", "Nyanza", "Nyaruguru", "Ruhango"],
        "WEST": ["Karongi", "Ngororero", "Nyabihu", "Nyamasheke", "Rubavu", "Rusizi", "Rutsiro"],
        "EAST": ["Bugesera", "Gatsibo", "Kayonza", "Kirehe", "Ngoma", "Nyagatare", "Rwamagana"]
    };

    const provinceSelect = document.getElementById("province");
    const districtSelect = document.getElementById("district");

    function loadDistricts() {
        const province = provinceSelect.value;
        const selectedDistrict = "@Model.warehouse.District";

        districtSelect.innerHTML = '<option value="">Select District</option>';

        if (districtData[province]) {
            districtData[province].forEach(d => {
                const opt = document.createElement("option");
                opt.value = d.toUpperCase();
                opt.textContent = d;
                if (d.toUpperCase() === selectedDistrict.toUpperCase()) {
                    opt.selected = true;
                }
                districtSelect.appendChild(opt);
            });
        }
    }

    window.onload = loadDistricts;
    provinceSelect.addEventListener("change", loadDistricts);
</script>
